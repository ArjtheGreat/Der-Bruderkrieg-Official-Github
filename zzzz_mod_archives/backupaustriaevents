add_namespace = austria

country_event = {
	id = austria.1
	title = austria.1.t
	desc = austria.1.d
	picture = GFX_country_event_hungarian_soldiers

	is_triggered_only = yes

	trigger = {
		tag = AUS
		OR = {
			has_completed_focus = AUS_EXECUTE_BELA_KUN
		}
	}


	option = {
		name = aus.b.1
		ai_chance = { factor = 100 }
		HUN = {transfer_state = 154}
		HUN = {transfer_state = 155}
