country_event = {
	id = austria.1775565
	title = austria.1775565.t
	desc = austria.1775565.d
	picture = GFX_country_event_hungarian_soldiers

	is_triggered_only = yes

	trigger = {
		AND = {
			AUS = {
				NOT = {
					has_completed_focus = AUS_EXECUTE_BELA_KUN
					has_completed_focus = AUS_PARDON_HUNGARIAN_REVS
				}
			}
			date > 1939.2.8
		}
	}


