		HUN = {transfer_state = 71}
		HUN = {transfer_state = 70}
		HUN = {transfer_state = 45}
		HUN = {transfer_state = 109}

		154 = {
			add_core_of = HUN
		}
		155 = {
			add_core_of = HUN
		}
		43 = {
			add_core_of = HUN
		}
		83 = {
			add_core_of = HUN
		}
		76 = {
			add_core_of = HUN
		}
		84 = {
			add_core_of = HUN
		}
		82 = {
			add_core_of = HUN
		}
		764 = {
			add_core_of = HUN
		}

		664 = {
			add_core_of = HUN
		}
		73 = {
			add_core_of = HUN
		}
		71 = {
			add_core_of = HUN
