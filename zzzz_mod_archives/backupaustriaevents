#############New austria events


######Generic deal


country_event = {
	id = austria.104
	title = austria.104.t
	desc = austria.104.d
	picture = GFX_report_event_hungary_gains_transylvania

	fire_only_once = yes   #this means this event can only fire one time
	is_triggered_only = yes #this means this event can't happen randomly, has to be triggered somewhere else. In our case, your national focus

	option = { # If Romania selects this option, they will transfer states, no war
		name = austria.104.a #needs to be localized
		ai_chance = { factor = 65 } #this factor means the AI will almost always pick this one
		if = {
			limit = {
				ROOT = {
					tag = SOV
				}
			}
			diplomatic_relation = {
				country = AUS
				relation = non_aggression_pact
				active = yes
				}
			}

			if = {
				limit = {
					ROOT = {
						tag = FRA
					}
				}
				diplomatic_relation = {
					country = AUS
					relation = non_aggression_pact
					active = yes
					}
				}

		if = {
			limit = {
				ROOT = {
					tag = USA
				}
			}
			diplomatic_relation = {
				country = AUS
				relation = non_aggression_pact
				active = yes
				}

				add_ideas = AUS_arms_sharing_with_usa
			}
		hidden_effect = { #Hidden effect here means the button won't SAY it's sending this event
			news_event = { id = austria.105 hours = 3 } #this event just notifies Austria that they got their way
			}
	}

	option = { # If Romania selects this option, they say no and Austria gets event to get war goal
		name = austria.104.b #needs to be localized
		ai_chance = { factor = 35 }
		hidden_effect = {
			AUS = { country_event = austria.106 days = 1 } #This event will give Austria an event to get a wargoal
			}
	}
} #Closing Bracket

