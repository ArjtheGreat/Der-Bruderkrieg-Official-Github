news_event = {
	id = austria.3
	title = austria.3.t
	desc = austria.3.d
	picture = GFX_report_event_spr_italian_volunteers
	is_triggered_only = yes
	major = yes

	trigger = {
		tag = AUS
		AND = {
			has_completed_focus = AUS_INTERVENE_LOMBARDY
		}
	}


	option = {
		name = aus.b.3
		if = {
			limit = {
				original_tag = ITA
				AND {
					has_stability > 75
					is_ai = true
					has_manpower > 400000
				}
			}
			ITA = {
				declare_war_on = {
					target = AUS
					type = annex_everything
				}
			}
		}
		}
	}

